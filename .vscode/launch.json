    "version": "0.2.0",
    "configurations": [
        {
            "type": "dezog",
            "request": "launch",
            "name": "CSpect",
            "remoteType": "cspect",
            "cspect": {
                "hostname": "localhost",
                "port": 11000,
            },
            "listFiles": [
                {
                    "path": "SpecBong.lst",
                    "asm": "sjasmplus",
                    "mainFile": "SpecBong.asm"
                }
            ],
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10  
            },
            "startAutomatically": false,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assert enable",
                "-sprites",
                "-patterns",
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "initialStackTop",
            "load": "SpecBong.nex",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        },

        {
            "type": "dezog",
            "request": "launch",
            "name": "ZX Next",
            "remoteType": "serial",
            "cspect": {
                "hostname": "localhost",
                "port": 12000,
            },
            "listFiles": [
                {
                    "path": "SpecBong.lst",
                    "asm": "sjasmplus",
                    "mainFile": "SpecBong.asm"
                }
            ],
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10
            },
            "startAutomatically": false,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assert enable",
                "-sprites",
                "-patterns",
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "initialStackTop",
            "load": "SpecBong.nex",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        }
    ]
}